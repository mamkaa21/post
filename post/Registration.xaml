<Window x:Class="post.Registration"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:post"
        mc:Ignorable="d"
        Title="Registration" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.ColumnSpan="5" Background="CornflowerBlue" Content="CATSS" HorizontalContentAlignment="Center"
          FontSize="35" Foreground="Beige"/>
        <Label Grid.Column="1" Grid.Row="1" Content="Login" FontSize="20"/>
        <TextBox  Grid.Column="2" Grid.Row="1"/>
        <Label Grid.Column="1" Grid.Row="2" Content="Password" FontSize="20"/>
        <TextBox  Grid.Column="2" Grid.Row="2"/>
        <Button Grid.Column="2" Grid.Row="3" Content="OK" FontSize="30" Click="Button_Click3"/>
    </Grid>
</Window>
